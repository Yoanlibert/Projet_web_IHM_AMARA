        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jcompetence" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:id="@+id/bajouter" android:layout_gravity="right"/>

    <!-- langues-->
