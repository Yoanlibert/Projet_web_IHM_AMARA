                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jinteret" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:id="@+id/bajouter3" android:layout_gravity="right"/>

    <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:id="@+id/bretour" android:layout_gravity="right"/>
    <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Save resume"
            android:id="@+id/benregistrer" android:layout_gravity="right"/>

</LinearLayout>