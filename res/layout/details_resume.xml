                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jlangue" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.00">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Niveau       :"
                android:id="@+id/tniveau"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jniveau" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:id="@+id/bajouter2" android:layout_gravity="right"/>

    <!-- competence en informatique-->

    <LinearLayout
            android:orientation="horizontal"
